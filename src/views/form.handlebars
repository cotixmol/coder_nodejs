<div class="divFormContainer">
    <form class="formAddProduct" method="POST" action="/api/productos/">
        <div class="form-group">
            <label>Name</label>
            <input type="text" name="name" class="form-control" placeholder="Add product name">
        </div>
        <div class="form-group">
            <label>Price</label>
            <input type="text" name="price" class="form-control" placeholder="Add product price">
        </div>
        <div class="form-group">
            <label>Thumbnail</label>
            <input type="text" name="thumbnail" class="form-control" placeholder="Add product thumbnail">
        </div>
        <div class="form-group">
            <label>Description</label>
            <textarea class="form-control inputDescription" name="description" id="exampleFormControlTextarea1" rows="3" placeholder="Add product description"></textarea>
        </div>
        <div class="form-group">
            <label>Code</label>
            <input type="input" name="code" class="form-control" placeholder="Add product code">
        </div>
        <div class="form-group">
            <label>Stock</label>
            <input type="number" name="stock" class="form-control" placeholder="Add product stock">
        </div>
        <br>
            <button class="btn btn-dark">Upload to API</button>
    </form> 
</div>

